#!/usr/bin/env node

const Serverless = require('../index')

const {Components, runCommand} = Serverless

;(async () => {
  const command = process.argv[2]

  if (command === 'deploy') {
    await Components()
  } else if (command === 'remove') {
    await Components(false)
  } else {
    await runCommand(command)
  }
})().catch(e => console.log(e))
